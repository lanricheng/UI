<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.bankapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".action"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>            <!--启动页面-->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>             <!--主活动页面-->

        <activity
            android:name=".Activity_Account_inquiry"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>              <!--账户查询页面-->

        <activity
            android:name=".Activity_add_account"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>              <!--添加用户页面-->

        <activity
            android:name=".Activity_inquiry"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--账户查询详细信息页面-->

        <activity
            android:name=".Activity_Mobile_Phone_number_transfer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--手机号转账页面-->

        <activity
            android:name=".Activity_inner_bank_transfer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--行内转账页面-->

        <activity
            android:name=".Activity_inter_bank_transfer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--跨行转账页面-->

        <activity
            android:name=".Activity_detailed_inquiry"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--明细查询页面-->

        <activity
            android:name=".Activity_phone_recharge"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>               <!--手机充值页面-->

    </application>

</manifest>