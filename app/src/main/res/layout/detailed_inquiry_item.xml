<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/detailed_inquiry_item_layout1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/detailed_inquiry_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/detailed_inquiry_item_flag"
            android:layout_toRightOf="@+id/detailed_inquiry_item_time"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_turnout"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/detailed_inquiry_item_button"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/detailed_inquiry_item_paystyle">

                <TextView
                    android:id="@+id/detailed_inquiry_item_textflag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ "
                    android:textColor="#000000"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/detailed_inquiry_item_fuhao"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detailed_inquiry_item_textflag"
                    android:text="¥"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/detailed_inquiry_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detailed_inquiry_item_fuhao"
                    android:textColor="#000000"
                    android:textSize="20dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/detailed_inquiry_item_paystyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/detailed_inquiry_item_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="详情"
            android:background="@color/colorback"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/detailed_inquiry_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/detailed_inquiry_item_layout1" />              <!--line-->


</RelativeLayout>